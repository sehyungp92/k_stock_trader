# =============================================
# KIS API Credentials
# =============================================
# Korea Investment & Securities API credentials
# Get these from: https://openapi.koreainvestment.com

KIS_APP_KEY=your_app_key
KIS_APP_SECRET=your_app_secret
KIS_ACCOUNT_NO=12345678
KIS_ACCOUNT_PROD_CODE=01
KIS_IS_PAPER=true

# HTS User ID (required for condition search and WebSocket subscriptions)
KIS_HTS_ID=your_hts_id

# User-Agent string sent with KIS API requests
KIS_MY_AGENT=Mozilla/5.0

# =============================================
# Paper Trading Credentials (Optional)
# =============================================
# If using separate credentials for paper trading
# Leave empty to use the same credentials above

KIS_PAPER_APP_KEY=
KIS_PAPER_APP_SECRET=
KIS_PAPER_ACCOUNT_NO=

# =============================================
# PostgreSQL Database
# =============================================
# Passwords for PostgreSQL roles

# Admin password (postgres user)
POSTGRES_PASSWORD=your_secure_password

# OMS writer role password
POSTGRES_WRITER_PASSWORD=writer_password

# Metabase reader role password (optional, for dashboards)
POSTGRES_READER_PASSWORD=reader_password

# =============================================
# PCIM External APIs
# =============================================
# Required for PCIM strategy

# Google Gemini API key (for transcript analysis)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key
